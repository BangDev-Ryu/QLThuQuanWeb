@model IEnumerable<QLThuQuanWeb.Models.PhieuMuon>

@{
    ViewData["Title"] = "Lịch sử mượn trả";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Lịch sử mượn trả thiết bị</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Mã phiếu</th>
                            <th>Tên thiết bị</th>
                            <th>Ngày mượn</th>
                            <th>Ngày hạn trả</th>
                            <th>Loại mượn</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ThietBi.Name</td>
                                    <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                                    <td>@item.NgayTra.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Loai</td>
                                    <td>@item.TrangThai</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Không có lịch sử mượn trả</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

